<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_playlist_album_fragment"
    android:paddingLeft="17dp"
    android:paddingTop="@dimen/fragment_vertical_padding"
    android:paddingRight="17dp"
    android:background="@color/black"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ui.component.DetailPlaylistAlbum">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/img_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_detail_musicalbum_photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_detail_playlist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="27sp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                 />

            <TextView
                android:id="@+id/tv_detail_playlist_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bright_gray"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                 />

            <ToggleButton
                android:id="@+id/tb_following_playlist"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textOff="FOLLOW"
                android:textOn="FOLLOWING"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:background="@drawable/bck_sausage"
                />

            <android.widget.Button
                android:id="@+id/btn_shuffleplay_detail"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="@string/shuffleplay_text"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/theme_color_primary"
                android:layout_gravity="center"
                android:background="@drawable/bck_sausage"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_item_music"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:listitem="@layout/item_musicalbum_list" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>