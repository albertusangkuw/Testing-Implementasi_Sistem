<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_home"
    android:orientation="vertical"
    android:paddingLeft="17dp"
    android:paddingTop="@dimen/fragment_vertical_padding"
    android:paddingRight="17dp"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/text_home_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:text="Good Morning"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
        />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_fab"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foregroundGravity="right"
            android:layout_gravity="right"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/white"
            tools:src="@android:color/darker_gray"
            android:src="@drawable/ic_sample_user_icon"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4F0B0B"
        android:background="@drawable/bck_rounded"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Recently Played"
            android:textColor="@color/white"
            android:textSize="25sp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_item_big_musicalbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_big_musicalbum_list" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_testing_playbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Start Playbar"
    />


    <Button
        android:id="@+id/btn_testing_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Start Login"
        />

</LinearLayout>