<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="@dimen/fragment_vertical_padding"
    android:paddingRight="30dp"
    tools:context=".ui.login.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_down_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_expand_more_24" />

        <TextView
            android:id="@+id/tv_my_playlist"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/my_playlist_text"
            android:textColor="@color/up_bright_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_more_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_horiz_24" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_title_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/title_song_text"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/tv_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:gravity="left"
            android:layout_weight="1"
            android:text="@string/artist_name_text"
            android:textSize="10sp"
            android:textColor="@color/up_bright_gray"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_like_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_baseline_favorite_border_24"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/icon_seekbar_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:progress="30"
        android:progressDrawable="@drawable/ic_seekbar_drawable_progress"
        android:progressTint="@color/bright_gray"
        android:thumb="@drawable/ic_seekbar_drawable_thumb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_begin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:text="@string/begin_time_text"
            android:textColor="@color/up_bright_gray"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_time_text"
            android:textColor="@color/up_bright_gray"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:id="@+id/img_shuffle_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="0"
            android:src="@drawable/ic_baseline_shuffle_24"/>

        <ImageView
            android:id="@+id/img_previous_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"/>

        <ImageButton
            android:id="@+id/img_pause_icon"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="left"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_pause_circle_filled_24"/>

        <ImageView
            android:id="@+id/img_next_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"/>

        <ImageButton
            android:id="@+id/img_repeat_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="0"
            android:src="@drawable/ic_baseline_repeat_24"/>
    </LinearLayout>
</LinearLayout>