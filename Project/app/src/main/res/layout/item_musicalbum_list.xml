<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_item_musicalbum_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
        app:srcCompat="@mipmap/ic_launcher"
        />

    <LinearLayout
        android:id="@+id/layout_text_item_musicalbum_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/img_item_musicalbum_photo"
        android:layout_toRightOf="@+id/img_item_musicalbum_photo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_music_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="Album Name 1 / Song Name 1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_music_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Description"
            android:textColor="@color/bright_gray" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_more_music_album_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_text_item_musicalbum_list"
        android:layout_alignEnd="@+id/layout_text_item_musicalbum_list"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="-44dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_baseline_more_vert_24" />
</RelativeLayout>